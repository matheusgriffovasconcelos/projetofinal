@model IEnumerable<CategoriaModel>
<link rel="stylesheet" href="~/css/tabela.css">

<div class="container">
    <header class="d-flex justify-content-between align-tems-center">
        <div>
            <h2 class="text-primary">Listagem de Categorias</h2>
        </div>
        <div>
            <a asp-action="Cadastrar" class="btn btn-primary"><i class="bi bi-plus"></i> Nova Categoria</a>
        </div>
    </header>
    <hr>

    @if (Model.Count() > 0)
    {
        <div class="container">
            <table class="table table-striped table-categorias table-sm table-hover">
                <thead class="bg-dark bg-gradient text-white">
                    <tr>
                        <th>Código</th>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-danger">@item.Id.ToString("D2")</td>
                            <td>@item.Nome</td>
                            <td>
                                <a asp-action="Alterar" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                                    <i class="bi bi-pencil" title="Alterar"></i> </a>
                                <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash" title="Excluir"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>Não há nenhuma Categoria Cadastrada.</p>
    }
</div>
